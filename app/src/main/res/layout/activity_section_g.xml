<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_section_g"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="72dp"
    tools:context="edu.aku.hassannaqvi.cbt_child_recruitment.SectionGActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            android:background="@color/colorHeading"
            android:text="@string/section_G"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            tools:typeface="serif" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/crg01" />

        <RadioGroup
            android:id="@+id/fpg003"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/fpg00301"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fpg00301" />

            <RadioButton
                android:id="@+id/fpg00302"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fpg00302" />

            <RadioButton
                android:id="@+id/fpg00303"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fpg00303" />


            <RadioButton
                android:id="@+id/fpg00304"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fpg00304" />

            <RadioButton
                android:id="@+id/fpg00305"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fpg00305" />

            <RadioButton
                android:id="@+id/fpg00306"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fpg00306" />

            <RadioButton
                android:id="@+id/fpg00307"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fpg00307" />

            <RadioButton
                android:id="@+id/fpg00308"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fpg00308" />

            <RadioButton
                android:id="@+id/fpg00388"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/other" />

        </RadioGroup>

        <EditText
            android:id="@+id/fpg00388x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="@string/other"
            android:maxLength="30"
            android:visibility="gone" />

    </LinearLayout>


</LinearLayout></ScrollView>
